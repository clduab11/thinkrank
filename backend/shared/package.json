{
  "name": "@thinkrank/shared",
  "version": "1.0.0",
  "description": "Shared types, utilities, and configuration for ThinkRank backend services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/joi": "^17.2.3",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.0"
  },
  "author": "ThinkRank Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thinkrank/thinkrank.git",
    "directory": "backend/shared"
