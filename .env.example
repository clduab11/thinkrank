# ThinkRank Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
APP_NAME=ThinkRank
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/thinkrank_dev
REDIS_URL=redis://localhost:6379

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Configuration - CRITICAL: Change these values in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-immediately
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-this-immediately
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=thinkrank-assets
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Push Notifications
FCM_SERVER_KEY=your-firebase-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.thinkrank.app

# Analytics & Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key

# Performance & Scaling
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL_SECONDS=3600

# Development & Testing
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Research Institution APIs
RESEARCH_API_BASE_URL=https://api.research-institution.edu
RESEARCH_API_KEY=your-research-api-key

# Email Service
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@thinkrank.com
SUPPORT_EMAIL=support@thinkrank.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
